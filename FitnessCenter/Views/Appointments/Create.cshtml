@model FitnessCenter.Models.Appointment

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="mb-3">
                <a asp-action="Index" class="text-decoration-none text-muted hover-white">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            </div>

            <div class="card bg-dark border border-secondary shadow-lg">
                <div class="card-header border-bottom border-secondary text-center pt-4 pb-3">
                    <h2 class="fw-bold text-uppercase text-danger" style="font-family: 'Oswald', sans-serif;">
                        YENİ RANDEVU
                    </h2>
                    <p class="text-muted small mb-0">Antrenmanını planla, hedefine yaklaş.</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="MemberId" class="form-label text-white fw-bold">Üye Bilgisi</label>

                            @if (User.IsInRole("Admin"))
                            {
                                <select asp-for="MemberId" class="form-select bg-secondary text-white border-0" asp-items="ViewBag.MemberId">
                                    <option value="">-- Üye Seçiniz --</option>
                                </select>
                            }
                            else
                            {
                                <input type="hidden" asp-for="MemberId" value="@ViewBag.CurrentMemberId" />
                                <input class="form-control bg-dark text-muted border-secondary" value="@ViewBag.CurrentMemberName" disabled />
                            }
                            <span asp-validation-for="MemberId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrainerId" class="form-label text-white fw-bold">Eğitmen</label>
                            <select asp-for="TrainerId" class="form-select bg-secondary text-white border-0" asp-items="ViewBag.TrainerId">
                                <option value="">-- Eğitmen Seçiniz --</option>
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ServiceId" class="form-label text-white fw-bold">Hizmet / Ders</label>
                            <select asp-for="ServiceId" class="form-select bg-secondary text-white border-0" asp-items="ViewBag.ServiceId">
                                <option value="">-- Hizmet Seçiniz --</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartTime" class="form-label text-white fw-bold">Başlangıç</label>
                                <input asp-for="StartTime" class="form-control bg-secondary text-white border-0" type="datetime-local" style="color-scheme: dark;" />
                                <span asp-validation-for="StartTime" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndTime" class="form-label text-white fw-bold">Bitiş</label>
                                <input asp-for="EndTime" class="form-control bg-secondary text-white border-0" type="datetime-local" style="color-scheme: dark;" />
                                <span asp-validation-for="EndTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-danger btn-lg fw-bold text-uppercase shadow">
                                RANDEVUYU ONAYLA
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model FitnessCenter.Models.AIRecommendationViewModel

@{
    ViewData["Title"] = "Yapay Zeka Önerisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Sonuç kutusu: Beyaz kart şeklinde */
    .ai-result-box {
        background-color: #ffffff !important;
        color: #000000 !important; /* Ana yazı rengi kesinlikle SİYAH */
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        margin-top: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
    }

        /* Kutu içindeki her şeyin rengini zorla siyah yap */
        .ai-result-box p,
        .ai-result-box li,
        .ai-result-box span,
        .ai-result-box div,
        .ai-result-box strong {
            color: #000000 !important;
        }

        /* Tabloların tasarımı */
        .ai-result-box table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #f8f9fa !important;
            color: #000000 !important;
        }

        .ai-result-box th, .ai-result-box td {
            border: 1px solid #dee2e6;
            padding: 12px;
            text-align: left;
            color: #000000 !important; /* Tablo yazıları siyah */
        }

        .ai-result-box th {
            background-color: #e9ecef !important;
            font-weight: bold;
            color: #000000 !important;
        }

        /* Başlıkların renkleri - ARTIK KIRMIZI */
        .ai-result-box h1, .ai-result-box h2, .ai-result-box h3, .ai-result-box h4 {
            color: #dc3545 !important; /* Fitness Kırmızısı */
            border-bottom: 2px solid #dc3545;
            padding-bottom: 10px;
            margin-top: 25px;
            margin-bottom: 15px;
            font-weight: 700;
        }

        /* Listeler */
        .ai-result-box ul, .ai-result-box ol {
            padding-left: 20px;
            margin-bottom: 15px;
        }

        .ai-result-box li {
            margin-bottom: 8px;
        }

    /* Form etiketleri (Sol taraf) */
    .form-label {
        color: #fff;
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-uppercase text-danger mb-4">Egzersiz / Diyet Önerisi</h2>

            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="HeightCm" class="form-label">Boy (cm)</label>
                    <input asp-for="HeightCm" class="form-control" type="number" placeholder="Örn: 170" required />
                </div>

                <div class="mb-3">
                    <label asp-for="WeightKg" class="form-label">Kilo (kg)</label>
                    <input asp-for="WeightKg" class="form-control" type="number" placeholder="Örn: 70" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Yaş</label>
                    <input asp-for="Age" class="form-control" type="number" placeholder="Örn: 22" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Goal" class="form-label">Hedef</label>
                    <select asp-for="Goal" class="form-control">
                        <option value="Kilo Verme">Kilo Verme</option>
                        <option value="Kas Kazanma">Kas Kazanma</option>
                        <option value="Kilo Alma">Kilo Alma</option>
                        <option value="Fit Kalma">Fit Kalma (Form Koruma)</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-danger w-100 py-2 fw-bold">YAPAY ZEKA ÖNERİSİ AL</button>
            </form>
        </div>

        <div class="col-md-8">
            <h3 class="text-white mb-3">YAPAY ZEKA ÖNERİSİ</h3>

            @if (ViewBag.AIResponse != null)
            {
                <div id="ai-output" class="ai-result-box">
                    Yükleniyor...
                </div>

                <div id="raw-markdown" style="display:none;">
                    @ViewBag.AIResponse
                </div>
            }
            else
            {
                <div class="alert alert-dark text-center" style="border: 1px solid #444;">
                    Sol taraftaki formu doldurup butona bastığınızda, size özel program burada görünecektir.
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var rawText = document.getElementById("raw-markdown");
        if (rawText) {
            var htmlContent = marked.parse(rawText.textContent.trim());
            document.getElementById("ai-output").innerHTML = htmlContent;
        }
    });
</script>
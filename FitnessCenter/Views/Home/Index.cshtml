@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section">
    <div class="hero-overlay"></div> <div class="container text-center hero-content">
        <h1 class="display-3 fw-bold text-uppercase">Sınırlarını <span class="text-danger">Zorla</span></h1>
        <p class="lead text-white mb-4">En iyi ekipmanlar ve uzman antrenörlerle potansiyelini açığa çıkar.</p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg px-4">Hemen Başla</a>
            <a asp-controller="Trainers" asp-action="Index" class="btn btn-outline-light btn-lg px-4">Eğitmenler</a>
        </div>
    </div>
</div>
<div class="container my-5 relative-z">
    <div class="row text-center g-4">

        <div class="col-md-4">
            <a asp-controller="Services" asp-action="Index" class="text-decoration-none h-100 d-block">
                <div class="info-box p-5 rounded h-100">
                    <div class="icon-box mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#E63946" class="bi bi-dumbbell" viewBox="0 0 16 16">

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FitnessCenter</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FitnessCenter.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        @{
            // Şu an hangi sayfadayız? (Controller ve Action bilgisini alıyoruz)
            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

            // Aktif sınıfını ekleyen küçük bir yardımcı fonksiyon (Local Function)
            string IsActive(string controller, string action = null)
            {
                if (action != null)
                    return (currentController == controller && currentAction == action) ? "active" : "";

                return (currentController == controller) ? "active" : "";
            }
        }

        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    FITNESS<span style="color: var(--vurgu-rengi);">CENTER</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Services")" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Trainers")" asp-area="" asp-controller="Trainers" asp-action="Index">Trainers</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("AI")" asp-area="" asp-controller="AI" asp-action="Index">AI Öneri</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @IsActive("Appointments")" href="#" id="appointmentsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Appointments
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="appointmentsDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Appointments" asp-action="Index">All Appointments</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Appointments" asp-action="MyAppointments">My Appointments</a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Appointments" asp-action="Create">Create Appointment</a>
                                    </li>
                                }
                            </ul>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            var adminActive = (currentController == "Members" || currentController == "TrainerAvailabilities") ? "active" : "";

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @adminActive" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Members" asp-action="Index">Members</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Trainers" asp-action="Index">Trainers</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Services" asp-action="Index">Services</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="TrainerAvailabilities" asp-action="Index">Trainer Availability</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


	<main role="main" class="pb-3">
		@RenderBody()
	</main>

	<footer class="border-top footer">
		<div class="container">
			&copy; 2025 - FitnessCenter - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

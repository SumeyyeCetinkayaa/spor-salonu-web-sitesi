@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header border-bottom border-secondary text-center pt-4 pb-3">
                    <h2 class="fw-bold text-uppercase text-danger" style="font-family: 'Oswald', sans-serif;">
                        HESABINA GİRİŞ YAP
                    </h2>
                </div>

                <div class="card-body p-4">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="text-light">Email Adresi</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="text-light">Şifre</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label text-muted">
                                    <input class="form-check-input bg-dark border-secondary" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="d-grid gap-2">
                                <button id="login-submit" type="submit" class="btn btn-danger btn-lg fw-bold text-uppercase">GİRİŞ YAP</button>
                            </div>

                            <hr class="border-secondary my-4" />

                            <div class="text-center">
                                <p class="mb-2">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-danger fw-bold">
                                        Yeni Kayıt Oluştur
                                    </a>
                                </p>
                                <p class="text-muted small">
                                    Şifrenizi unuttuysanız, yönetici ile (sumeyye.cetinkaya2@ogr.sakarya.edu.tr) iletişime geçiniz.
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="text-center mt-3">
                    <p class="text-muted">veya şununla giriş yap:</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-light btn-sm" name="provider" value="@provider.Name">@provider.DisplayName</button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header border-bottom border-secondary text-center pt-4 pb-3">
                    <h2 class="fw-bold text-uppercase text-danger" style="font-family: 'Oswald', sans-serif;">
                        YENİ HESAP OLUŞTUR
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control bg-secondary text-white border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-light">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-light">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control bg-secondary text-white border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-light">Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-danger btn-lg fw-bold text-uppercase">KAYIT OL</button>
                        </div>

                        <div class="text-center mt-3">
                            <span class="text-muted">Zaten hesabın var mı?</span>
                            <a asp-page="./Login" class="text-decoration-none text-danger fw-bold ms-1">Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}